{
	"selector": "source.lua",
	"working_dir": "$file_path",
	"shell": true,
	
	"shell_cmd": "lua5.1 $file_name",

	"variants": [
		{
			"name": "compile and run",
			"shell_cmd": "bash compile.sh $file_base_name"
		},

		{
			"name": "run only",
			"shell_cmd": "lua5.1 $file_name"
		},

		{
			"name": "kill",
			"shell_cmd": "killall -v -KILL lua5.1"
		}
	]
}
